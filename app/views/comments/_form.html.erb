<div class="comment-form">
	<%= form_for([@post, @post.comments.build]) do |f| %>
		<div class="comment-form-block">
			<%= f.label :name, class: "comment-form-name-label" %><br>
			<%= f.text_field :name, class: "comment-form-name" %> 
		</div>

		<div class="comment-form-block">
			<%= f.label :body, class: "comment form-body-label" %><br>
			<%= f.text_area :body, class: "comment-form-body" %>
		</div>

		<div class="comment-form-block">
			<%= f.submit %>
		</div>
	<% end %>
</div>