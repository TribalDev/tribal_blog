<section class="container auth_form">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, class: 'label' %><br />
      <%= f.email_field :email, autofocus: true, class: 'auth_input' %>
    </div>

    <div class="field">
      <%= f.label :name, class: 'label' %><br />
      <%= f.text_field :name, class: 'auth_input' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'label' %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'auth_input' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'label' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'auth_input' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
